# Database (Neon PostgreSQL)
DATABASE_URL=postgres://user:password@your-neon-host.neon.tech/dbname?sslmode=require

# Server
HOST=127.0.0.1
PORT=3000
RUST_LOG=info,qa_pms_api=debug

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-256-bit-hex-key-here

# Jira OAuth 2.0
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret
JIRA_REDIRECT_URI=http://localhost:3000/api/v1/auth/jira/callback

# Postman API
POSTMAN_API_KEY=your-postman-api-key

# Testmo API
TESTMO_URL=https://your-instance.testmo.net
